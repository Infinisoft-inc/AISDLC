{
  "private": true,
  "name": "ttsconi",
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*",
    "teams/*",
    "!mcp-servers/*",
    "!scripts/*"
  ],
  "scripts": {
    "preinstall": "node .scripts/enforce-pnpm.js",
    "build": "pnpm -r run build",
    "dev:web": "pnpm --filter web dev",
    "dev:cli": "pnpm --filter cli start",
    "lint": "pnpm -r run lint"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.0.0"
  }
}
